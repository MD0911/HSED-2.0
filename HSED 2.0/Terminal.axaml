<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="HSED_2_0.Terminal"
        Width="800" Height="480"
        Background="#222222"
        Title="HSED_2_0"
        CanResize="False">

	<!-- Globale Button-Styles -->
	<Window.Styles>
		<Style Selector="Button">
			<Setter Property="CornerRadius" Value="5"/>
			<Setter Property="Background" Value="#444444"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="FontFamily" Value="Segoe UI"/>
		</Style>
	</Window.Styles>

	<Canvas>
		<!-- Äußerer Rahmen, etwas schmaler und niedriger -->
		<Border BorderThickness="3"
				BorderBrush="GreenYellow"
				Background="#a8a8a8"
				Width="320"
				Height="400"
				Canvas.Top="10"
				Canvas.Left="280"
				CornerRadius="10">
			<Border.Effect>
				<DropShadowEffect BlurRadius="10" Color="Black" Opacity="0.5"/>
			</Border.Effect>
		</Border>

		<!-- LCD Display, ebenfalls verkleinert -->
		<Border BorderThickness="2"
				BorderBrush="Black"
				Background="#a8e49c"
				Width="260"
				Height="100"
				Canvas.Top="30"
				Canvas.Left="300"
				CornerRadius="5"
				Padding="5">
			<Grid>
				<!-- Unteres Grid: Bildanzeige (16x4) -->
				<UniformGrid x:Name="ImageGrid" Columns="16" Rows="4">
					<!-- Zeile 1 -->
					<Image x:Name="Cell_1_1" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_1_2" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_1_3" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_1_4" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_1_5" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_1_6" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_1_7" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_1_8" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_1_9" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_1_10" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_1_11" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_1_12" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_1_13" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_1_14" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_1_15" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_1_16" Margin="2" Stretch="Uniform"/>
					<!-- Zeile 2 -->
					<Image x:Name="Cell_2_1" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_2_2" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_2_3" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_2_4" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_2_5" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_2_6" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_2_7" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_2_8" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_2_9" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_2_10" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_2_11" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_2_12" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_2_13" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_2_14" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_2_15" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_2_16" Margin="2" Stretch="Uniform"/>
					<!-- Zeile 3 -->
					<Image x:Name="Cell_3_1" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_3_2" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_3_3" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_3_4" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_3_5" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_3_6" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_3_7" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_3_8" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_3_9" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_3_10" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_3_11" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_3_12" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_3_13" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_3_14" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_3_15" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_3_16" Margin="2" Stretch="Uniform"/>
					<!-- Zeile 4 -->
					<Image x:Name="Cell_4_1" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_4_2" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_4_3" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_4_4" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_4_5" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_4_6" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_4_7" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_4_8" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_4_9" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_4_10" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_4_11" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_4_12" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_4_13" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_4_14" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_4_15" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cell_4_16" Margin="2" Stretch="Uniform"/>
				</UniformGrid>

				<!-- Oberes Grid: Cursor-Overlay (16x4) -->
				<UniformGrid x:Name="CursorGrid" Columns="16" Rows="4" Panel.ZIndex="1"
							 Background="Transparent" IsHitTestVisible="False">
					<!-- Zeile 1 -->
					<Image x:Name="Cursor_1_1" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_1_2" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_1_3" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_1_4" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_1_5" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_1_6" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_1_7" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_1_8" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_1_9" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_1_10" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_1_11" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_1_12" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_1_13" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_1_14" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_1_15" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_1_16" Margin="2" Stretch="Uniform"/>
					<!-- Zeile 2 -->
					<Image x:Name="Cursor_2_1" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_2_2" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_2_3" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_2_4" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_2_5" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_2_6" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_2_7" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_2_8" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_2_9" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_2_10" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_2_11" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_2_12" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_2_13" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_2_14" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_2_15" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_2_16" Margin="2" Stretch="Uniform"/>
					<!-- Zeile 3 -->
					<Image x:Name="Cursor_3_1" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_3_2" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_3_3" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_3_4" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_3_5" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_3_6" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_3_7" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_3_8" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_3_9" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_3_10" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_3_11" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_3_12" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_3_13" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_3_14" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_3_15" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_3_16" Margin="2" Stretch="Uniform"/>
					<!-- Zeile 4 -->
					<Image x:Name="Cursor_4_1" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_4_2" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_4_3" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_4_4" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_4_5" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_4_6" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_4_7" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_4_8" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_4_9" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_4_10" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_4_11" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_4_12" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_4_13" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_4_14" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_4_15" Margin="2" Stretch="Uniform"/>
					<Image x:Name="Cursor_4_16" Margin="2" Stretch="Uniform"/>
				</UniformGrid>
			</Grid>
		</Border>

		<!-- Kompaktere numerische Tastatur mit Up/Down, 5 Zeilen x 3 Spalten -->
		<Border Background="LightGray"
				Width="260"
				Height="240"
				Canvas.Top="155"
				Canvas.Left="300"
				CornerRadius="8"
				Padding="10">
			<UniformGrid Rows="5" Columns="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
				<!-- Zeile 1 -->
				<Button Width="40" Height="40" Content="1" FontSize="14" Margin="18,0"
						HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="OnKeyButtonClick"/>
				<Button Width="40" Height="40" Content="2" FontSize="14" Margin="18,0"
						HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="OnKeyButtonClick"/>
				<Button Width="40" Height="40" Content="3" FontSize="14" Margin="18,0"
						HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="OnKeyButtonClick"/>

				<!-- Zeile 2 -->
				<Button Width="40" Height="40" Content="4" FontSize="14" Margin="18,0"
						HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="OnKeyButtonClick"/>
				<Button Width="40" Height="40" Content="5" FontSize="14" Margin="18,0"
						HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="OnKeyButtonClick"/>
				<Button Width="40" Height="40" Content="6" FontSize="14" Margin="18,0"
						HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="OnKeyButtonClick"/>

				<!-- Zeile 3 -->
				<Button Width="40" Height="40" Content="7" FontSize="14" Margin="18,0"
						HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="OnKeyButtonClick"/>
				<Button Width="40" Height="40" Content="8" FontSize="14" Margin="18,0"
						HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="OnKeyButtonClick"/>
				<Button Width="40" Height="40" Content="9" FontSize="14" Margin="18,0"
						HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="OnKeyButtonClick"/>

				<!-- Zeile 4 -->
				<Button Width="40" Height="40" Content="DOWN" FontSize="14" Margin="18,0"
						HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="OnKeyButtonClick"/>
				<Button Width="40" Height="40" Content="0" FontSize="14" Margin="18,0"
						HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="OnKeyButtonClick"/>
				<Button Width="40" Height="40" Content="UP" FontSize="14" Margin="18,0"
						HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="OnKeyButtonClick"/>

				<!-- Zeile 5 (UP, Platzhalter, DOWN) -->
				<Button Width="40" Height="40" Content="ESC" FontSize="14" Margin="18,0"
						HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="OnKeyButtonClick"/>
				<!-- Platzhalter in der Mitte -->
				<ContentControl />
				<Button Width="40" Height="40" Content="ENT" FontSize="14" Margin="18,0"
						HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="OnKeyButtonClick"/>
			</UniformGrid>
		</Border>
	</Canvas>
</Window>
