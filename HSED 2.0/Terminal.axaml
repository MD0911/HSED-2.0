		<Style Selector="Button">
			<Setter Property="CornerRadius" Value="5"/>
			<Setter Property="Background" Value="#444444"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="FontFamily" Value="Segoe UI"/>
		</Style>
	</Window.Styles>

	<!-- Wrapper für die Rotation -->
