                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="OnKeyButtonClick"/>
					<Button Width="40" Height="40" Content="6" FontSize="14" Margin="10,0"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="OnKeyButtonClick"/>
					<Button Width="40" Height="40" Content="7" FontSize="14" Margin="10,0"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="OnKeyButtonClick"/>
					<Button Width="40" Height="40" Content="8" FontSize="14" Margin="10,0"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="OnKeyButtonClick"/>
					<Button Width="40" Height="40" Content="9" FontSize="14" Margin="10,0"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="OnKeyButtonClick"/>
					<Button Width="40" Height="40" Content="↓" FontSize="14" Margin="10,0"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="OnKeyButtonClick"/>
					<Button Width="40" Height="40" Content="0" FontSize="14" Margin="10,0"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="OnKeyButtonClick"/>
					<Button Width="40" Height="40" Content="↑" FontSize="14" Margin="10,0"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="OnKeyButtonClick"/>
					<Button Width="40" Height="40" Content="ESC" FontSize="14" Margin="10,0"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="OnKeyButtonClick"/>
					<ContentControl />
					<Button Width="40" Height="40" Content="↵" FontSize="14" Margin="10,0"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="OnKeyButtonClick"/>
